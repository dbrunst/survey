<%= simple_form_for @user_survey do |f| %>
  <div class="mb-3">
    <%= f.input :question,  input_html: { class: 'form-control form-control-sm' } %>
  </div>
  <div class="mb-3">
    <button type="submit" class="btn btn-primary">Submit</button>
    <%= link_to 'Cancel', :back, class: "btn btn-primary" %>
  </div>

<% end %>


