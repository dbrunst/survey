<h2> User Surveys </h2>



<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Question</th>
      <th scope="col">Percentage Yes</th>
      <th scope="col">
        <div class="">
          <%= link_to "Create a new user survey", new_user_survey_path, class: 'btn btn-primary' %>
        </div>
    </tr>
  </thead>

  <tbody>
    <% @user_surveys.each do |u| %>
      <tr>
        <th scope="row"><%= u.id %></th>
        <th scope="row"><%= u.question %></th>
        <th scope="row"><%= getYesNoResponseRatio(u.id) %></th>
        <th scopw="row"><%= link_to 'Add response', new_response_path(user_survey_id: u.id), class: 'btn btn-primary' %></th>
      </tr>
    <% end %>
  </tbody>



